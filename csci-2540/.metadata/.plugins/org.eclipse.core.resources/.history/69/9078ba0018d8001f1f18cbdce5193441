package assg1_fitchj23;

import java.util.Scanner;

public class DigitReverse {
	public static void main(String[] args) {

		Scanner kbd = new Scanner(System.in);
		int userNumber;
		
		System.out.println("Please enter a non-negative integer (-1 to exit): ");
		userNumber = kbd.nextInt();
		
		System.out.println("Your number printed in reverse order is: ");
		digitExtractor(userNumber);
		
		kbd.close();
	}

	public static void digitExtractor(int num) {
		
		for(int i = num.length(); i != 0; i/=10) {
			System.out.println(num % i);
		}
				
	}
}

