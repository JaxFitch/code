package assg1_fitchj23;

import java.util.Scanner;

public class DateChange {
	public static void main(String[] args) {
		
		Scanner kbd = new Scanner(System.in);
		String usDate;
		String euDate;
		String day;
		String month;
		String year;
		
		System.out.print("Enter a date in the form mon/day/year: ");
		usDate = kbd.nextLine();
		
		day = usDate.substring(usDate.indexOf("/") + 1, usDate.lastIndexOf("/"));
		month = usDate.substring(0, usDate.indexOf("/"));
		year = usDate.substring(usDate.lastIndexOf("/") + 1);
	
		euDate = day + "." + month + "." + year;
		System.out.print("Your date in European form is: " + euDate);
		
		kbd.close();
	}

}
