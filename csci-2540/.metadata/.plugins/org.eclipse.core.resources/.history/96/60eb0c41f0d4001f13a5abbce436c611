package activity1;

import java.util.*;

public class TempConverter {
	public static void main(String[] args){
		
		Scanner kbd = new Scanner(System.in);
		int userCelcius;
		
		System.out.println("A temperature in celcius: ");
		userCelcius = kbd.nextInt();
		
		float fahrenheit = (int)((userCelcius * 9/5) + 32);
		
		System.out.println("The temperature in fahrenheit is: " + (int)(fahrenheit));
		
		kbd.close();
	}
}
