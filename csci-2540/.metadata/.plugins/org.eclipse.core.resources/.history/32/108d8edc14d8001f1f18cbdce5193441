package assg1_fitchj23;

import java.util.Scanner;

public class DateChange {
	public static void main(String[] args) {
		
		Scanner kbd = new Scanner(System.in);
		String usDate;
		
		
		System.out.print("Enter a date in the form mon/day/year: ");
		usDate = kbd.nextLine();
		
		String day = usDate.substring(usDate.indexOf("/") + 1, usDate.lastIndexOf("/"));
		String month = usDate.substring(0, usDate.indexOf("/"));
		String year = usDate.substring(usDate.lastIndexOf("/") + 1);
		
		String euDate = day + "." + month + "." + year;
		
		System.out.print(day + month + year);
		
		kbd.close();
	}

}
